<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="technology.cariad.partnerverifierlibrary">

    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PartnerVerifierLibrary"
        tools:targetApi="31">
        <service android:name=".DigitalSignatureVerifier" android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="technology.cariad.partnerverifierlibrary.verifier"/>
            </intent-filter>
        </service>
    </application>

</manifest>